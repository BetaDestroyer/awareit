{% extends 'base.html.twig' %}

{% block body %}
<div class="quiz-wrapper col-lg-12">
	<div class="quiz-title">
		<h1>{{ quizInfo.name }} - LÃ¶sungen & Ergebnisse</h1>
	</div>
	<div class="quiz-content">
		{% for question in quizData %}
			<div class="question-wrapper-results question{{ question.id }}" id="{{ question.id }}">
				<div class="quiz-question">{{ question.questionText }}</div>
				<div class="quiz-answers">
					{% for answer in question.answers %}
					<div class="quiz-answer {% if answer.isCorrect == true %} correct-answer {% endif %} radio result-view">
							<input 
								type="radio" 
								disabled 
								name="optradio-{{ question.id }}" 
								{% if answer.givenAnswer == true %} checked {% endif %} 
								class="answer-opt" 
								value="{{ answer.id }}"
								id="answer-{{ answer.id }}"
							>
						<label for="answer-{{ answer.id }}">{{ answer.answerText }}</label>
					</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
</div>

<script src="{{ asset('js/results.js') }}"></script>

{% endblock %}