{% extends 'base.html.twig' %}

{% block body %}
<div class="course-wrapper col-lg-12">
	<div class="course-info col-lg-6">
		<div class="course-title">
			<h1>{{ course.name }}</h1>
		</div>
		<div class="course-description">
			<h4>{{ course.description }}</h4>
		</div>
	</div>
	<div class="course-video col-lg-6">
		<iframe src="https://player.vimeo.com/video/{{ course.video }}?color=ffffff&title=0&byline=0&portrait=0" width="640" height="345" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
	</div>
	<div class="course-navigation col-lg-12">
		<div class="start-course">
			<a class="btn btn-success" href="{{ path('quiz', {'id': course.quizId}) }}" role="button">Quiz starten</a>
		</div>
	</div>
</div>

{% endblock %}