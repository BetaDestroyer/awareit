{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="login-form row">
	<div class="col-lg-12">
		{% if error %}
		<div class="col-lg-12">
		    <div class="error bg-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
		</div>
		{% endif %}

		<div class="form-wrapper">
			<form action="{{ path("fos_user_security_check") }}" method="post">
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

			    <div class="form-group">
			    	<label for="email">{{ 'security.login.email'|trans }}</label>
			    	<input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.email'|trans }}" />
				</div>

				<div class="form-group">
			    	<label for="password">{{ 'security.login.password'|trans }}</label>
			    	<input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"/>
				</div>

				<div class="checkbox">
			    	<label for="remember_me">
			    		<input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
			    	</label>
		    	</div>

			    <input type="submit" id="_submit" class="btn btn-default submit-button" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			</form>
		</div>
	</div>
</div>
{% endblock fos_user_content %}
