{% trans_default_domain 'FOSUserBundle' %}

<div class="register-form row">
	<div class="col-lg-12">
		<div class="form-wrapper">
			<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
			    <div>
					<h2>{{ 'resetting.request.submit'|trans }}</h2>
			        {% if invalid_username is defined %}
			            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
			        {% endif %}
			        <div class="form-group">
			        	<label for="email">{{ 'resetting.request.username'|trans }}</label>
			        	<input type="email" id="username" class="form-control" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}"/>
			    	</div>
			    </div>
			    <div>
			        <input type="submit" class="btn btn-default submit-button" value="{{ 'resetting.request.submit'|trans }}" />
			    </div>
			</form>
		</div>
	</div>
</div>