{% trans_default_domain 'FOSUserBundle' %}

<div class="register-form row"> 
	<div class="col-lg-12">
		<div class="form-wrapper">
			<h2>{{ 'resetting.reset.submit'|trans }}</h2>
			{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
			    {{ form_widget(form) }}
			    <div>
			        <input type="submit" class="btn btn-default submit-button" value="{{ 'resetting.reset.submit'|trans }}" />
			    </div>
			{{ form_end(form) }}
		</div>
	</div>
</div>