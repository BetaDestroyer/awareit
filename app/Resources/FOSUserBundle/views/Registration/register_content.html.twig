{% trans_default_domain 'FOSUserBundle' %}

<div class="register-form row">
	<div class="col-lg-12">
		<div class="form-wrapper">
			<h2>{{ 'registration.create_new_user'|trans }}</h2>
			{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register '}}) }}
			    {{ form_widget(form) }}
			    <div class="g-recaptcha" data-sitekey="6LeLxAsUAAAAACQ6fAm_rKCQ9eMOAwyh-Ik4VcEu"></div>
			    <div>
			        <input type="submit" class="btn btn-default submit-button" value="{{ 'registration.submit'|trans }}" />
			    </div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
