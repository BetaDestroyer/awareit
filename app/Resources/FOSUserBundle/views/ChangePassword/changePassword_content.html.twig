{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

	<div class="profile-edit-wrapper col-lg-12">
		<h2>Passwort Ã¤ndern</h2>
		<div class="row">
			<div class="form-group col-md-6">
				{{ form_row(form.current_password, { 'attr': { 'class': 'form-control' } } ) }}
	        	{{ form_errors(form.current_password, { 'attr': { 'class': 'form-control' } } ) }}
			</div>
			<div class="form-group col-md-6">
				{{ form_row(form.plainPassword.first, { 'attr': { 'class': 'form-control' } } ) }}
	        	{{ form_errors(form.plainPassword.first, { 'attr': { 'class': 'form-control' } } ) }}
			</div>
		</div>
		<div class="row">
			<div class="form-group col-md-6">
				{{ form_row(form.plainPassword.second, { 'attr': { 'class': 'form-control' } } ) }}
	        	{{ form_errors(form.plainPassword.second, { 'attr': { 'class': 'form-control' } } ) }}
			</div>
			<div class="form-group col-md-6 submit">
	        	<input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
			</div>
		</div>
	</div>	
    
{{ form_end(form) }}
